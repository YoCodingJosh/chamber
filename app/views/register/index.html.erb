<%= set_page_title "Register" %>

<div class="pb-2">
  <h1 class="text-3xl font-bold text-center">Register</h1>
  <p class="text-center">Glad you're here! Let's get you signed up.</p>
  <p class="text-center">Already have an account? <a href="/login" class="text-blue-500 hover:underline">Log in</a></p>
</div>

<% if flash.any? && flash[:validation_errors] %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
    <strong class="font-bold">Validation errors:</strong>
    <ul class="list-disc list-inside">
      <% flash[:validation_errors].each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user, :url => { :action => "register" } do |form| %>
  <div class="flex flex-col">
    <div class="mb-4">
      <%= form.label :username, class: "text-lg mb-2" %>
      <%= form.text_field :username, required: true, class: "border-2 border-gray-300 p-2 w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :email, class: "text-lg mb-2" %>
      <%= form.email_field :email, required: true, class: "border-2 border-gray-300 p-2 w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :password, class: "text-lg mb-2" %>
      <%= form.password_field :password, required: true, class: "border-2 border-gray-300 p-2 w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :password_confirmation, "Confirm Password", class: "text-lg mb-2" %>
      <%= form.password_field :password_confirmation, required: true, class: "border-2 border-gray-300 p-2 w-full" %>
    </div>

    <div class="mb-4" data-controller="cloudflare-turnstile">
      <%= cloudflare_turnstile %>
    </div>

    <div class="mb-4">
      <%= form.submit "Register", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>
